service cloud.firestore {
  match /databases/{database}/documents {
    match /admins/{userId} {
      // Only the authenticated user with matching UID can read their admin flag.
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // manage admins via console
    }

    match /posts/{id} {
      // Anyone can read posts.
      allow read: if true;

      // Only signed-in users can write. Tighten further by checking the admins doc if desired.
      allow write: if request.auth != null;
      // Example stricter rule (uncomment to use):
      // allow write: if request.auth != null
      //   && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
